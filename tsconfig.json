{
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "jsx": "react",
    "strict": true,
    "skipLibCheck": true,
    "stripInternal": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2017"
    ]
  },
  "path": [],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.js"
  ],
  "include": [
    "./**/*.d.ts",
    "./**/*.ts",
    "./**/*.tsx"
  ]
}
